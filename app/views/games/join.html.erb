<h1>Join a Multiplayer Game</h1>
<%= form_with url: join_world_path, method: :post do |form| %>
  <div>
    <%= form.label :ip_address, 'Enter Host IP Address' %>
    <%= form.text_field :ip_address, placeholder: 'e.g., 192.168.1.10', class: 'form-control' %>
  </div>
  <%= form.submit 'Join Game', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Multiplayer Menu', multiplayer_menu_path, class: 'btn btn-secondary' %>
