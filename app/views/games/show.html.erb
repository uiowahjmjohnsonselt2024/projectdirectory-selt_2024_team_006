<h1 class="text-center" style="font-family: 'Press Start 2P', cursive; color: black; padding-top: 2.5rem"><%= @world.name %></h1>


<% if @world.lore.present? %>
  <div class="world-lore" style="margin-top: 20px; background: #f8f8f8; padding: 10px; border-radius: 8px; text-align: center; font-size: 1rem;">
    <p><%= @world.lore %></p>
  </div>
<% end %>

<% if @user_world_state %>
  <h2 class="text-center" style="color: green;">Your Health:</h2>
  <div class="enemy-health-bar">
    <% user_health = @user_world_state.health %>
    <% max_health = 100 %>
    <div class="health-bar">
      <div class="user-health-bar-fill" style="width: <%= (user_health.to_f / max_health * 100).round(2) %>%;">
        <span class="health-text"><%= user_health %> / <%= max_health %></span>
      </div>
    </div>
  </div>

<% end %>

<div class="container mt-5" style="background-image: url('<%= @world.background_image_url %>'); background-size: cover; background-position: center; padding: 20px; border: 4px solid #333;">
  <div class="grid">
    <% (0..6).each do |y| %>
      <div class="row justify-content-center">
        <% (0..6).each do |x| %>
          <% cell = @cells.find { |c| c.x == x && c.y == y } %>
          <div class="col cell text-center pixel-cell">
            <%= button_to " ", shard_move_world_path(@world, x: cell.x, y: cell.y), method: :post, class: "transparent-button" %>
            <%= cell.content %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% if player_in_battle?(@world) %>
  <div class="world-lore" style="margin-top: 20px; background: #f8f8f8; padding: 10px; border-radius: 8px; text-align: center;">
    <p class="text-center"><%= @current_battle.enemy_data['narration'] %></p>
  </div>

  <h2 class="text-center" style="color: red;">Enemy Stats</h2>
  <div class="enemy-health-bar">
    <% enemy_health = @current_battle.enemy_data['health'] || 0 %>
    <% max_health = @current_battle.enemy_data['max_health'] || 100 %> <!-- Default to 100 if nil -->
    <div class="health-bar">
      <div class="health-bar-fill" style="width: <%= (enemy_health.to_f / max_health * 100).round(2) %>%;">
        <span class="health-text"><%= enemy_health %> / <%= max_health %></span>
      </div>
    </div>
  </div>
  <p class="text-center"><strong>Enemy Attack:</strong> <%= @current_battle.enemy_data['attack'] %></p>

  <% if @current_battle.turn == 'player' %>
    <h3 class="text-center" style="color: blue;">It's Your Turn!</h3>
    <div class="inventory">
      <% current_user.items.each do |item| %>
        <div class="item">
          <%= image_tag item.image_url, class: 'item-image', alt: item.name %>
          <div class="item-details">
            <p><strong><%= item.name %></strong></p>
            <p>Damage: <%= item.damage %> (±5)</p>
            <%= button_to 'Attack with this item', attack_with_item_world_path(item_id: item.id), method: :post, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h3 class="text-center" style="color: darkorange;">Waiting for Enemy's Turn...</h3>
  <% end %>
<% else %>
  <div class="mt-4 text-center">
    <div class="d-flex flex-column align-items-center">
      <%= button_to '⬆️', move_world_path(@world, direction: 'up'), method: :post, class: 'btn btn-primary arrow-btn' %>
      <div class="d-flex justify-content-center mt-2">
        <%= button_to '⬅️', move_world_path(@world, direction: 'left'), method: :post, class: 'btn btn-primary arrow-btn' %>
        <%= button_to '➡️', move_world_path(@world, direction: 'right'), method: :post, class: 'btn btn-primary arrow-btn' %>
      </div>
      <%= button_to '⬇️', move_world_path(@world, direction: 'down'), method: :post, class: 'btn btn-primary arrow-btn mt-2' %>
    </div>
    <!-- New Form for Moving to Specific Cell -->
    <div class="mt-4">
      <h5>Move to Specific Cell</h5>
      <%= form_with url: shard_move_world_path(@world), method: :post, class: 'd-flex align-items-center justify-content-center gap-2',data: { confirm: "This move will cost 50 shards. Are you sure you want to move to this cell?" } do %>
        <%= number_field_tag :x, nil, placeholder: 'X Coordinate', class: 'form-control', required: true, min: 0, style: 'width: 180px;' %>
        <%= number_field_tag :y, nil, placeholder: 'Y Coordinate', class: 'form-control', required: true, min: 0, style: 'width: 180px;' %>
        <%= submit_tag 'Move', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
<% end %>
<div style="height: 50px;"></div>




<style>
    @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    .dungeon-bg {
        background-size: cover;
        background-position: center;
        padding: 20px;
        border: 4px solid #333;
        max-width: 80vw;
        margin: 0 auto;
    }

    .pixel-cell {
        position: relative;
        width: 80px;
        height: 80px;
        padding: 10px;
        font-size: 2.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #3e3e3e;
        background-color: rgba(162, 213, 242, 0.8);
        color: #333;
        font-family: 'Press Start 2P', cursive;
        box-sizing: border-box;
    }

    .pixel-cell:hover {
        cursor: pointer;
        background-color: rgba(242, 141, 53, 0.8);
        border-color: #000;
    }
    .content-wrapper {
        position: relative; /* Keeps content and button together */
        width: 100%; /* Ensure it fills the cell */
        height: 100%;
    }
    .transparent-button {
        position: absolute; /* Position over the content */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust for exact centering */
        background: transparent; /* Optional background */
        color: transparent; /* Button text color */
        border: none;
        border-radius: 5px; /* Optional rounded corners */
        z-index: 10; /* Ensure it's above content */
        padding: 40px 40px; /* Adjust button size */
    }


    .arrow-btn {
        font-size: 1.5rem;
        width: 50px;
        height: 50px;
        padding: 0;
        margin: 2px;
        background-color: #333;
        color: #f2f2f2;
        border: 2px solid #555;
    }

    .arrow-btn:hover {
        background-color: #555;
        color: #fff;
    }

    .enemy-health-bar {
        margin: 20px auto;
        text-align: center;
        width: 80%;
    }

    .health-bar {
        background-color: #ccc;
        border: 2px solid #555;
        border-radius: 8px;
        height: 20px;
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .user-health-bar-fill {
        background-color: green; /* Red for health */
        height: 100%;
        text-align: center;
        white-space: nowrap;
        transition: width 0.3s ease;
        color: #fff;
        line-height: 20px;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .health-bar-fill {
        background-color: #f00; /* Red for health */
        height: 100%;
        text-align: center;
        white-space: nowrap;
        transition: width 0.3s ease;
        color: #fff;
        line-height: 20px;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .world-lore {
        margin-top: 20px;
        background: #f8f8f8;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
    }


</style>

